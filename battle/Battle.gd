extends Node2D

signal no_enemies(this)

var enemies = []
var battle_pos_x = 0

func _ready():
	pass # Replace with function body.

func add_enemy(enemy):
	enemies.append(enemy)
	print("Adding enemy " + enemy.display_name + " to battle " + str(self))
	
func remove_enemy(enemy):
	enemies.remove(enemies.find(enemy))
	print("Removing enemy " + enemy.display_name + " from battle " + str(self))
	if enemies.empty():
		emit_signal("no_enemies", self)
		print("Battle destroyed " + str(self))
		queue_free()
